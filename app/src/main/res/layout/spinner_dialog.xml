<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_alignStart="@id/spinner1"
        android:layout_alignEnd="@+id/spinner1"
        android:layout_alignTop="@+id/spinner1"
        android:layout_marginTop="-24dp"
        android:text="Hours"
        android:textAlignment="center"
        android:textColor="@android:color/white" />

    <NumberPicker
        android:id="@+id/spinner1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:solidColor="@android:color/black"
        android:theme="@style/AppTheme.Picker"
        android:layout_toLeftOf="@+id/spinner2"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp">
    </NumberPicker>

    <TextView
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_alignStart="@id/spinner2"
        android:layout_alignEnd="@+id/spinner2"
        android:layout_alignTop="@+id/spinner2"
        android:layout_marginTop="-24dp"
        android:text="Minutes"
        android:textAlignment="center"
        android:textColor="@android:color/white" />

        <NumberPicker
            android:id="@+id/spinner2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:solidColor="@android:color/black"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="100dp"
            android:theme="@style/AppTheme.Picker">

        </NumberPicker>

    <TextView
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_alignStart="@id/spinner3"
        android:layout_alignEnd="@+id/spinner3"
        android:layout_alignTop="@+id/spinner3"
        android:layout_marginTop="-24dp"
        android:text="Seconds"
        android:textAlignment="center"
        android:textColor="@android:color/white" />

        <NumberPicker
            android:id="@+id/spinner3"
            android:layout_width="100dp"
            android:solidColor="@android:color/black"
            android:theme="@style/AppTheme.Picker"
            android:layout_toRightOf="@+id/spinner2"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="100dp"
            android:layout_height="wrap_content">
        </NumberPicker>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Increment"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="-24dp"
        android:layout_alignTop="@+id/spinner4"
        android:layout_alignEnd="@+id/spinner4"
        android:layout_alignStart="@id/spinner4"
        android:layout_marginBottom="8dp"/>

    <NumberPicker
        android:id="@+id/spinner4"
        android:layout_width="100dp"
        android:solidColor="@android:color/black"
        android:theme="@style/AppTheme.Picker"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/spinner2">
    </NumberPicker>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner4"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialogOK"
            android:text="OK"
            android:layout_width="wrap_content"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:id="@+id/dialogCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Cancel" />

    </LinearLayout>

</RelativeLayout>